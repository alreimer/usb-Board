< "show" 0
	print [ 12 > "DL" > "AL" 0 1
if "_@list+1:" > "AT" 2 1 201 29 1 0 "C" $_@list+1#0:7:"/L/L" ": " $_@list+1#2:18 "|" $_@list+1#1:25:"/L/L" 0 fi
if "_@list+2:" > "AT" 2 33 201 61 2 0 "C" $_@list+2#0:7:"/L/L" ": " $_@list+2#2:18 "|" $_@list+2#1:25:"/L/L" 0 fi
if "_@list+3:" > "AT" 2 65 201 93 3 0 "C" $_@list+3#0:7:"/L/L" ": " $_@list+3#2:18 "|" $_@list+3#1:25:"/L/L" 0 fi
if "_@list+4:" > "AT" 2 97 201 125 4 0 "C" $_@list+4#0:7:"/L/L" ": " $_@list+4#2:18 "|" $_@list+4#1:25:"/L/L" 0 fi
if "_@list+5:" > "AT" 205 97 237 125 7 0 "C->" 0 fi
/*
if "_@list+1:" > "AT" 2 1 100 29 1 0 "C" $_@list+1:11 0 fi
if "_@list+2:" > "AT" 104 1 201 29 2 0 "C" $_@list+2:11 0 fi
if "_@list+3:" > "AT" 2 33 100 61 3 0 "C" $_@list+3:11 0 fi
