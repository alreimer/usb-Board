	change_line "/etc/resolv.conf:/ nameserver/ /?val?/:nameserver  ??_%val??\n"{
	    shell "echo \"nameserver  ??_%val??\" >> /etc/resolv.conf";
	}
    savecfg;
    }

    boot_page "net-dns1.term";
end
< "A" 13
    boot_page "network.term";
end
